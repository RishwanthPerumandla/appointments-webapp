<div class="form">
  <div class="container"><div class="text-center"> <h1 class="text-center">Book An Appointment</h1>
    <a href="/" class="text-center"><button class="btn btn-primary text-center">Home</button></a></div>
   
    <form method="POST"   onsubmit="return post();">
      <div class="form-group col-md-4">
        <label for="person">Select The Person You want to meet</label>
        <select id="person" name="person" class="form-control">
          <option selected>Choose...</option>
          <option>principal</option>
          <option>director</option>
          <option>dean</option>
        </select>
      </div>
      <label for="role">Select your role: </label>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="radio"
          name="role"
          id="employee"
          value="employee"
        />
        <label class="form-check-label" for="employee">employee</label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="radio"
          name="role"
          id="student"
          value="student"
        />
        <label class="form-check-label" for="inlineRadio2">student</label>
      </div>
      <div class="form-group row">
        <label for="example-datetime-local-input" class="col-2 col-form-label"
          >Date and time</label
        >
        <div class="col-10">
          <input
            class="form-control"
            name="date"
            type="datetime-local"
            value="2020-05-15T13:45:00"
            id="example-datetime-local-input" required
          />
        </div>
      </div>
      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            placeholder="name" required
          />
        </div>
      </div>
      <div class="form-group row">
        <label for="rollno" class="col-sm-2 col-form-label">ID</label>
        <div class="col-sm-10">
          <input
            type="text"
            class="form-control"
            id="userid"
            name="userid"
            placeholder="Enter your StudentID/EmployeeID" required
          />
        </div>
      </div>
      <div class="form-group row">
        <label for="reason" class="col-sm-2 col-form-label"> Reason</label>
        <div class="col-sm-10">
          <textarea
            class="form-control"
            name="reason"
            id="reason"
            placeholder="Enter the Reason for the Appointment" required
          ></textarea>
        </div>
      </div>
      <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
          <input
            type="email"
            class="form-control"
            name="email"
            id="email"
            placeholder="Email" required
          />
        </div>
      </div>
      <div class="form-group row">
        <label for="phoneno" class="col-sm-2 col-form-label">Phoneno</label>
        <div class="col-sm-10">
          <input
            type="number"
            class="form-control"
            id="phone"
            name="phoneno"
            placeholder="phoneno" required
          />
        </div>
      </div>

      <div class="form-group row text-center" >
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary">
            Make an Appointment
          </button>
        </div>
      </div>
    </form>
  </div>
</div>


 

</script> 